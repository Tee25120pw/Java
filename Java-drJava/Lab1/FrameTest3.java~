import javax.swing.*;
import java.awt.*;

public class FrameTest3 {
  public static void main(String[] args) {
    Font fn = new Font("Cordia New",Font.BOLD,20);
    JFrame f = new JFrame("EXERCISE#7");
    JPanel p = new JPanel();
    p.setLayout(new GridLayout(4,1));
    
    JButton a = new JButton("Hello,My name is CPE 320.");
    JButton b = new JButton("Department of Computer Engineering");
    JButton c = new JButton("Srinakharinwirot University");
    JButton d = new JButton("Ongkarak Nakornnayok");
    
    a.setFont(fn);
    b.setFont(fn);
    c.setFont(fn);
    d.setFont(fn);
    
    p.add(a);
    p.add(b);
    p.add(c);
    p.add(d);
    
    f.add(p);
    f.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
    f.setSize(400,300);
    f.setVisible(true);