import java.util.Scanner;
import javax.swing.JOptionPane;
public class Scanner_Tee394 {
    public static void main(String [] args) {
        Float x,y; 
        Scanner sn = new Scanner(System.in);
        System.out.print("> Enter the temperature in Celsius unit:");
        x = sn.nextFloat();
        System.out.print("> Enter the temperature in Fahrenheit unit:");
        y = sn.nextFloat();
        JOptionPane.showMessageDialog(null, "the temperature in Fahrenhelt from Celsius unit is %f,x*(9f/5f)+32","Message",JOptionPane.INFORMATION_MESSAGE);
        JOptionPane.showMessageDialog(null, "the temperature in Kelvin from Celsius unit is %f,x+273","Message",JOptionPane.INFORMATION_MESSAGE);
        JOptionPane.showMessageDialog(null, "the temperature in Celsius from Fahrenhelt unit is %f,(y-32)*(5f/9f)","Message",JOptionPane.INFORMATION_MESSAGE);
        JOptionPane.showMessageDialog(null, "the temperature in Kelvin from Fahrenhelt unit is %f,(y-32)*(5f/9f)+273","Message",JOptionPane.INFORMATION_MESSAGE);
    }
}
